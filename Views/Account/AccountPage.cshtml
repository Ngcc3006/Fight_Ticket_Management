@model CNPMNC.Models.UserAccount

@{
    ViewData["Title"] = "Tài khoản cá nhân";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="account-container">
        <h2>Thông tin tài khoản</h2>

        <div class="profile-card">
            <h3>Thông tin cá nhân</h3>
            <p><strong>Họ tên:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p><strong>Passport/CCCD:</strong> @Model.Passport</p>
            <p><strong>Địa chỉ:</strong> @Model.Address</p>

            <div class="button-group">
                <a href="#" class="btn primary">Cập nhật thông tin</a>
                <a href="#" class="btn warning">Đổi mật khẩu</a>
            </div>
        </div>

        <div class="ticket-card">
            <h3>Lịch sử đặt vé</h3>
            <table>
                <thead>
                    <tr>
                        <th>Mã chuyến bay</th>
                        <th>Từ</th>
                        <th>Đến</th>
                        <th>Ngày bay</th>
                        <th>Giá vé</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td>@ticket.FlightCode</td>
                        <td>@ticket.From</td>
                        <td>@ticket.To</td>
                        <td>@ticket.DepartureTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@ticket.Price.ToString("N0") VNĐ</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
<style>
    body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7fa;
        margin: 0;
        padding: 0;
    }

    .account-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #007bff;
        margin-bottom: 25px;
    }

    .profile-card, .ticket-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 20px;
        margin-bottom: 25px;
    }

        .profile-card h3, .ticket-card h3 {
            color: #333;
            margin-bottom: 15px;
        }

        .profile-card p {
            margin: 5px 0;
            font-size: 15px;
        }

    .button-group {
        margin-top: 15px;
    }

    .btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: background 0.3s ease;
        margin-right: 10px;
    }

        .btn.primary {
            background: #007bff;
            color: white;
        }

            .btn.primary:hover {
                background: #0056b3;
            }

        .btn.warning {
            background: #ffc107;
            color: black;
        }

            .btn.warning:hover {
                background: #e0a800;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        table th, table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        table th {
            background: #007bff;
            color: white;
        }

        table tr:nth-child(even) {
            background: #f9f9f9;
        }

        table tr:hover {
            background: #f1f1f1;
        }
</style>
